<view class="default" wx:if="{{isShow}}">

  <!-- 轮播图 -->
  <w-swiper list="{{banners}}"/>

  <!-- 类别 -->
  <w-category list="{{categorys}}" bind:categoryClick="handleCategoryClick"/>

  <!-- 推荐歌单 -->
  <w-recommend list="{{recommends}}"/>

  <!-- 热门电台 -->
  <w-hotradio list="{{hotradios}}"/>

</view>

<view class="daily-recommend" wx:if="{{showDaily}}">

  <w-day-recommend poster="{{poster}}" recommendList="{{recommendList}}"/>

</view>