.top .poster {
  width: 750rpx;
  opacity: 0.8;
}

.top .back-icon {
  width: 60rpx;
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  z-index: 999;
}

.main {
  border: 2rpx solid #cdcdcd;
  border-bottom: 0;
  border-radius: 16rpx 16rpx 0 0;
  margin: 0 10rpx;
}

.main .play-all {
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  line-height: 1;
}

