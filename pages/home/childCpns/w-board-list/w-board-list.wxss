.play-all .play-btn image {
  width: 48rpx;
  padding-right: 20rpx;
}

.play-all .play-btn text{
  position: relative;
  bottom: 10rpx;
}

.main .list {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  line-height: 1;
}

.list .blur-pic image {
  width: 72rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.list .content {
  flex: 2;
}

.list .content .name {
  display: block;
  padding-bottom: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.list .content .author {
  font-size: 24rpx;
  color: #888888;
}

.list .play-icon image {
  width: 40rpx;
}