/* pages/profile/profile.wxss */
.login {
  text-align: center;
  margin: 0 auto;
  font-size: 32rpx;
  color: #ffffff;
  background-color: #ff5777;
}

.avatar {
  margin-top: 40rpx;
  text-align: center;
}

.avatar image {
  width: 160rpx;
  border: 1px solid #9e9e9e;
  border-radius: 50%;
}

.avatar text {
  position: relative;
  bottom: 60rpx;
  margin-left: 40rpx;
}

.login .content {
  padding-top: 60rpx;
  margin-bottom: 20rpx;
}

.login button {
  width: 40%;
  border-radius: 20rpx;
  margin: 40rpx 0;
}

.menu-item {
  margin: 20rpx 0;
}

.menu-item image {
  width: 60rpx;
}