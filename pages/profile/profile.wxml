<!--pages/profile/profile.wxml-->
<view class="profile" wx:if="{{!showLoginForm}}">
  <view class="avatar" wx:if="{{isLogin}}">
    <image src="{{avatar === '' ? '/assets/image/profile/ic_username.png' : avatar}}" mode="widthFix"/>
    <text>用户名：{{userName === '' ? '请登录' : userName}}</text>
  </view>
  <view class="login" wx:if="{{!isLogin}}">
    <view class="content">登录网易云音乐</view>
    <view>手机电脑多端同步，尽享海量高品质音乐</view>
    <button size="mini" bind:tap="handleLogin">立即登录</button>
  </view>
  <view class="menu">
    <block wx:for="{{menu}}" wx:key="index">
      <view class="menu-item">
        <image src="{{item.icon}}" mode="widthFix"/>
        <text>{{item.content}}</text>
      </view>
    </block>
  </view>
</view>
<w-login wx:if="{{showLoginForm}}" bind:comfirmLogin="handleComfirmLogin"/>
