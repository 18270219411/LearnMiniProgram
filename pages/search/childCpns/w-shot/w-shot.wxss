/* pages/search/childCpns/w-shot/w-shot.wxss */

.hot {
  padding: 0 40rpx;
  margin-top: 60rpx;
}

.hot .title {
  padding: 20rpx 0;
  font-size: 32rpx;
  font-weight: 700;
  color: #000000;
}

.hot-item {
  display: flex;
  padding: 20rpx 0;
}

.hot-item .index, .top-three {
  width: 40rpx;
  text-align: right;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #6d6d6d;
}

.hot-item .top-three {
  color: rgb(226, 36, 36);
}

.hot-item .song {
  flex: 2;
  margin-left: 30rpx;
}

.hot-item .song .name {
  font-size: 32rpx;
  font-weight: 600;
}

.hot-item .song .content {
  padding-top: 10rpx;
  font-size: 24rpx;
  overflow: hidden;
  color: #555555;
}

.hot-item .play-count {
  font-size: 28rpx;
  color: #9e9e9e;
}